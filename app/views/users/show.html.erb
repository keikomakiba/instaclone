<div class="container">
    
    <h3><%= link_to "みんなのPOSTS", blogs_path %></h3>

<h3><%= @user.name %>'s page</h3>
<h3>✉︎: <%= @user.email %></h3>
<li class="a"><%= image_tag(@user.image.url) %></li>

<div class=like>
    <p><%=image_tag("like.gif") %>LIKE IT
    </p>
</div>

<% @favorites_blogs.each do |favorite| %>
<li class="post"><%= favorite.title %>
    <%= favorite.content %>
    <%= image_tag favorite.image %>
</li>

<% end %>

</div>


